<!DOCTYPE html>
<html lang="fr">
<head>
  <title>CRUD : Express & Mongo DB</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- UIkit CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-rc.12/css/uikit.min.css" />
</head>
<body>
  <div class="uk-container">
    <h1>May Node and Express be with you.</h1>

    <h2>Ajouter une citation</h2>
    <form action="/quotes" method="POST" class="uk-grid uk-grid-small">
      <div class="uk-width-1-3"><input class="uk-input" type="text" placeholder="name" name="name" required></div>
      <div class="uk-width-1-3"><input class="uk-input" type="text" placeholder="quote" name="quote" required></div>
      <div class="uk-width-1-3"><button type="submit" class="uk-button uk-button-primary">Enregistrer</button></div>
    </form>
    <hr>
    <table class="uk-table uk-table-divider">
      <thead>
        <tr>
          <th>Name</th>
          <th>Quotes</th>
          <th>ID</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% for(var i=0; i<quotes.length; i++) {%>
          <tr class="js_quote">
            <td class="js_quote--name"><%= quotes[i].name %></td>
            <td class="js_quote--quote"><%= quotes[i].quote %></td>
            <td class="js_quote--id"><%= quotes[i]._id %></td>
            <td>
              <button id="delete" class="uk-button uk-button-danger" data-id="<%= quotes[i]._id %>" data-name="<%= quotes[i].name %>"> Supprimer </button>
              <button class="uk-button uk-button-primary" type="button" id="open-modal" data-id="<%= quotes[i]._id %>" data-name="<%= quotes[i].name %>" data-quote="<%= quotes[i].quote %>">Modifier</button>
            </td>
          </tr>
          <% } %>
      </tbody>
    </table>
    <!-- This is the modal -->
    <div id="modal-example" uk-modal>
        <div class="uk-modal-dialog uk-modal-body">
            <h2 class="uk-modal-title">Modifier un enregistrement :</h2>
            <form class="uk-form-stacked">
                <div class="uk-margin">
                    <label class="uk-form-label" for="update-name">Nom</label>
                    <div class="uk-form-controls">
                        <input class="uk-input" id="update-name" type="text" name="updateName" placeholder="">
                    </div>
                </div>
                <div class="uk-margin">
                    <label class="uk-form-label" for="update-quotes">Citation</label>
                    <div class="uk-form-controls">
                        <input class="uk-input" id="update-quotes" type="text" name="updateQuotes" placeholder="Some text...">
                    </div>
                </div>
                <div class="uk-text-right">
                    <input type="hidden" id="update-id" value="">
                    <button class="uk-button uk-button-danger uk-modal-close" type="button">Annuler</button>
                    <button class="uk-button uk-button-primary" type="button" id="update">Enregistrer</button>
                </div>
            </form>
        </div>
    </div>

  </div>
  <!-- UIkit JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-rc.12/js/uikit.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-rc.12/js/uikit-icons.min.js"></script>
  <script src="main.js"></script>
</body>
</html>